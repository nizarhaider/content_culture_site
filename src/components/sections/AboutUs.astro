---
import Container from "../shared/Container.astro";
---

<style>
  .video-wrapper {
    position: relative;
    width: 100%;
    padding-top: 177.78%;
    background: #000;
    border-radius: 0.5rem;
    overflow: hidden;
  }

  .video-wrapper iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: 0;
  }

  .tab {
    @apply px-6 py-3 text-lg font-medium rounded-lg transition-colors duration-200;
  }

  .tab-active {
    @apply bg-blue-600 text-white;
  }

  .tab-inactive {
    @apply text-gray-400 hover:text-white hover:bg-blue-500/20;
  }

  .price-button {
    @apply flex items-center gap-2 px-4 py-2 rounded-lg bg-blue-500 hover:bg-blue-600 transition-colors duration-200 text-white cursor-pointer;
  }

  .price-content {
    @apply mt-2 p-4 rounded-lg bg-blue-900/50 text-white transition-all duration-200 overflow-hidden;
  }

  .hide-price {
    @apply h-0 p-0 opacity-0;
  }
</style>

