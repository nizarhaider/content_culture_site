<script>
document.addEventListener('DOMContentLoaded', () => {
  // Tab switching logic
  const tabs = document.querySelectorAll('[data-tab]');
  
  tabs.forEach(tab => {
    tab.addEventListener('click', () => {
      const tabType = tab.getAttribute('data-tab');
      const longFormContent = document.getElementById('long-form-content');
      const shortFormContent = document.getElementById('short-form-content');
      const longFormTab = document.getElementById('long-form-tab');
      const shortFormTab = document.getElementById('short-form-tab');

      if (!longFormContent || !shortFormContent || !longFormTab || !shortFormTab) return;

      if (tabType === 'long-form') {
        longFormContent.classList.remove('hidden');
        shortFormContent.classList.add('hidden');
        longFormTab.classList.remove('tab-inactive');
        longFormTab.classList.add('tab-active');
        shortFormTab.classList.remove('tab-active');
        shortFormTab.classList.add('tab-inactive');
      } else {
        longFormContent.classList.add('hidden');
        shortFormContent.classList.remove('hidden');
        longFormTab.classList.remove('tab-active');
        longFormTab.classList.add('tab-inactive');
        shortFormTab.classList.remove('tab-inactive');
        shortFormTab.classList.add('tab-active');
      }
    });
  });

  // Price reveal logic
  const priceButtons = document.querySelectorAll('[data-price-id]');
  
  priceButtons.forEach(button => {
    button.addEventListener('click', () => {
      const priceId = button.getAttribute('data-price-id');
      if (!priceId) return;

      const priceContent = document.getElementById(`${priceId}-price`);
      if (!priceContent) return;

      const isHidden = priceContent.classList.contains('hide-price');
      const svg = button.querySelector('svg');
      const textElement = button.querySelector('svg + text');
      
      if (isHidden) {
        priceContent.classList.remove('hide-price');
        if (svg) {
          svg.innerHTML = `
            <line x1="5" y1="12" x2="19" y2="12"></line>
          `;
        }
        if (textElement) {
          textElement.textContent = 'Hide Price';
        }
      } else {
        priceContent.classList.add('hide-price');
        if (svg) {
          svg.innerHTML = `
            <line x1="12" y1="5" x2="12" y2="19"></line>
            <line x1="5" y1="12" x2="19" y2="12"></line>
          `;
        }
        if (textElement) {
          textElement.textContent = 'Show Price';
        }
      }
    });
  });
});
</script>