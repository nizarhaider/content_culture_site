---
import Button from "../shared/Button.astro";
import Container from "../shared/Container.astro";
import Paragraph from "../shared/Paragraph.astro";

const email = 'haseebhassen15253@gmail.com';
const subject = encodeURIComponent('Content Culture Inquiry'); // URL encoding the subject
const body = encodeURIComponent('Hello,\n\nI am interested in your services and would like to learn more.'); // URL encoding the body
const mailtoUrl = `mailto:${email}?subject=${subject}&body=${body}`;
---

<section  id="cta" class="pb-20">
  <Container>
    <div
      class="w-full relative py-8 md:py-10 px-6 md:px-8 rounded-2xl"
    >


      <div class="mx-auto text-center max-w-xl md:max-w-2xl relative">
        <h1
          class="text-3xl/tight sm:text-4xl/tight md:text-5xl/tight
          font-bold  text-heading-1"
        >
         <span class="text-transparent bg-clip-text bg-gradient-to-br from-indigo-600 from-20% via-primary via-30% to-green-600">Supercharge</span> your content
        </h1>
        <!-- <Paragraph className={"pt-10 "}>
          Ditch the middle man and reach out to us directly 
        </Paragraph> -->
        <div class="mx-auto max-w-md sm:max-w-xl pt-10">
          <Button variant={"primary"} href={mailtoUrl}>
            <span class="text-white relative z-[5]">Get In Touch</span>
          </Button>

        </div>
      </div>
    </div>
  </Container>
</section>
